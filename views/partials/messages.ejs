<% if(typeof errors !== 'undefined') { %>
    <% errors.forEach(error => { %>
        <div class="alert alert-warning fade show p-2 mb-2" role="alert">
            <%= error %>
        </div>
    <% }) %>
<% } %>

<% if(_success.length > 0) { %>
    <div class="alert alert-success fade show p-2 mb-2" role="alert">
        <%= _success %>
    </div>
<% } %>

<% if(_error.length > 0) { %>
    <div class="alert alert-warning fade show p-2 mb-2" role="alert">
        <%= _error %>
    </div>
<% } %>

<% if(error.length > 0) { %>
    <div class="alert alert-warning fade show p-2 mb-2" role="alert">
        <%= error %>
    </div>
<% } %>